<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>PSFlurl</PackageId>
    <Authors>Jason Vercellone</Authors>
    <CompanyName>vercellone</CompanyName>
    <Copyright>Copyright Â©  2025</Copyright>
    <Description>Fluent URL Building with Flurl</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <OutputPath>$(MSBuildThisFileDirectory)../../lib</OutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PackageIcon>icon.png</PackageIcon>

    <!-- Version Information managed by GitVersion -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Flurl" Version="4.0.0" GeneratePathProperty="true" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.1" PrivaeAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)../../LICENSE" Pack="true" PackagePath="" />
    <None Include="$(MSBuildThisFileDirectory)../../README.md" Pack="true" PackagePath="" />
    <None Include="$(MSBuildThisFileDirectory)../../PSFlurl.psd1" Pack="true" PackagePath="" />
    <None Include="$(MSBuildThisFileDirectory)../../PSFlurl.Types.ps1xml" Pack="true" PackagePath="" />
    <None Include="$(MSBuildThisFileDirectory)../../icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

  <Target Name="AddDependencies" BeforeTargets="GenerateNuspec">
    <ItemGroup>
      <_PackageFiles Include="$(OutputPath)\Flurl.dll">
        <PackagePath>lib\$(TargetFramework)</PackagePath>
        <BuildAction>None</BuildAction>
      </_PackageFiles>
    </ItemGroup>
  </Target>

  <Target Name="UpdateModuleManifest" AfterTargets="Build">
    <PropertyGroup>
      <PowerShellPath Condition="'$(PowerShellPath)' == ''">pwsh</PowerShellPath>
    </PropertyGroup>
    <Exec Command="$(PowerShellPath) -NonInteractive -File &quot;$(MSBuildThisFileDirectory)../../tools/Update-ModuleVersion.ps1&quot; -Version &quot;$(Version)&quot; -Path &quot;$(MSBuildThisFileDirectory)../../PSFlurl.psd1&quot;" />
  </Target>
</Project>